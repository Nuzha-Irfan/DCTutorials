@{
    @using WebGui.Models;
    @model IEnumerable<Account>;
}
<div id="tableview">
    <table width="100px" height="100px"> 
        <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Balance</th>
        <th>Account No</th>
        <th>Pin</th>
        </tr>

        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.FirstName</td>
                <td>@account.LastName</td>
                <td>@account.balance</td>
                <td>@account.AccountNo</td>
                <td>@account.pin</td>
                <td><img src="@account.ImageSource" style="width:50px; height:50px;" /></td>
            </tr>
        }
    </table>
</div>